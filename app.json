{
  "expo": {
    "name": "Scalovate",
    "slug": "scalovate",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "scalovate",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "assetBundlePatterns": ["**/*"],

    "icon": "./assets/Scalovate_Logo_Black.png",

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/Scalovate_Logo_Black.png",
        "backgroundColor": "#0B0B0C"
      }
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/Scalovate_Logo_Black.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/Scalovate_Logo_Black.png",
          "imageWidth": 220,
          "resizeMode": "contain",
          "backgroundColor": "#0B0B0C"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
